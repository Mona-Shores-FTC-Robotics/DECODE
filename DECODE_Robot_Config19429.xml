<?xml version='1.0' encoding='UTF-8' standalone='yes' ?>
<Robot type="FirstInspires-FTC">
    <LynxUsbDevice name="Control Hub Portal" serialNumber="(embedded)" parentModuleAddress="173">
        <LynxModule name="Control Hub" port="173">
            <LynxEmbeddedIMU name="imu" port="0" bus="0"/>

            <!-- Control Hub Motors (Drive) -->
            <LynxEmbeddedBNO055IMU name="imu (deprecated)" port="0" bus="0"/>
            <goBILDA5202SeriesMotor name="rf" port="0"/>
            <goBILDA5202SeriesMotor name="lf" port="1"/>
            <goBILDA5202SeriesMotor name="rb" port="2"/>
            <goBILDA5202SeriesMotor name="lb" port="3"/>

            <!-- Control Hub Servos (Feeders and Indicators) -->
            <Servo name="indicator_left" port="0"/>
            <Servo name="feeder_left" port="1"/>
            <Servo name="indicator_center" port="2"/>
            <Servo name="feeder_right" port="3"/>
            <Servo name="indicator_right" port="4"/>
            <Servo name="feeder_center" port="5"/>

            <!-- Control Hub I2C -->
            <goBILDAPinpoint name="pinpoint" port="0" bus="1"/>
        </LynxModule>

        <LynxModule name="Expansion Hub" port="2">
            <!-- Expansion Hub Motors (Launcher and Intake) -->
            <goBILDA5202SeriesMotor name="launcher_right" port="0"/>
            <goBILDA5202SeriesMotor name="launcher_center" port="1"/>
            <goBILDA5202SeriesMotor name="launcher_left" port="2"/>
            <goBILDA5202SeriesMotor name="intake" port="3"/>

            <!-- Expansion Hub Servos (Intake rollers and hoods) -->
            <Servo name="intake_roller" port="0"/>
            <Servo name="prefeed_roller" port="1"/>
            <Servo name="hood_left" port="2"/>
            <Servo name="hood_center" port="3"/>
            <Servo name="hood_right" port="4"/>

            <!-- Expansion Hub I2C (Color sensors) -->
            <RevColorSensorV3 name="lane_left_color" port="0" bus="0"/>
            <RevColorSensorV3 name="lane_center_color" port="1" bus="1"/>
            <RevColorSensorV3 name="lane_right_color" port="2" bus="2"/>
        </LynxModule>
    </LynxUsbDevice>

    <!-- Limelight 3A (connected via Ethernet over USB) -->
    <EthernetDevice name="limelight" serialNumber="EthernetOverUsb:eth0:172.29.0.24" port="0" ipAddress="172.29.0.1"/>
</Robot>
